{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "experimentalDecorators": true,
    "allowJs": false
  },
  "exclude": ["node_modules", "**/*.test.js", "dist"]
}
