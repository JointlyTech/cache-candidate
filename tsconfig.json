{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2020",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "experimentalDecorators": true,
    "allowJs": false,
    "types": ["node"],
    "module": "ESNext"
  },
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
